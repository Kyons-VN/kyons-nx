{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./tsconfig.editor.json"
    }
  ],
  "compilerOptions": {
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@presentation/*": ["apps/student/src/app/presentation/*"],
      "@infrastructure/*": ["apps/student/src/app/infrastructure/*"],
      "@domain/*": ["apps/student/src/app/domain/*"],
      "@utils/*": ["apps/student/src/app/utils/*"],
      "@share-directives/*": ["libs/share-directives/src/lib/*"],
      "@environments/*": ["apps/student/src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}

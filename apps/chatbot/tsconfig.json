{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "paths": {
      "@view/*": ["apps/chatbot/src/view/*"],
      "@data/*": ["apps/chatbot/src/data/*"],
      "@domain/*": ["apps/chatbot/src/domain/*"],
      "@utils/*": ["apps/chatbot/src/utils/*"],
      "@share-utils/*": ["libs/share-utils/src/lib/*"],
      "@environments": ["apps/chatbot/src/environments/environment"],
      "@share-directives/*": ["libs/share-directives/src/lib/*"],
      "@share-pipes": ["libs/share-pipes/src/index.ts"],
      "@share-components": ["libs/share-components/src/index.ts"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.editor.json"
    }
  ],
  "extends": "../../tsconfig.base.json",
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
